{
  "name": "gobang-bridge",
  "version": "0.1.0",
  "description": "A bridge gui wrapper for gobang applications",
  "main": "main.js",
  "scripts": {
    "start": "electron . -b \"python test.py\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder",
    "dist-win": "electron-builder --win --x64",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux"
  },
  "author": "Xujinsheng",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "electron": "^27.0.4"
  },
  "build": {
    "appId": "cn.net.xjs.gobanggui",
    "copyright": "Xujinsheng",
    "productName": "Gobang Bridge",
	"icon":"icon.png",
    "win": {
      "target": [
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
